@model IEnumerable<Trip.Models.Destination>
    

@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DestinationDetails</h1>

<div>
    <h4>Destination</h4>
    <hr />
    <div class="jumbotron">
        @foreach (var data in Model)
        {
            <h1>@data.categoryId : @data.categoryName</h1>
        }
    </div>
    <div class="bg-warning">
        <table class="table table-bordered">
            <tr>
                <th>
                    CategoryId
                </th>
                <th>
                    CategoryName
                </th>
            </tr>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.categoryId</td>
                    <td>@data.categoryName</td>
                </tr>
            }
        </table>      
    </div>
</div>
<div>
